#ifndef SPI_DRIVE_H_
#define SPI_DRIVE_H_

#include "stm32f1xx_hal.h"

typedef struct {
	uint8_t bit0: 1;
	uint8_t bit1: 1;
	uint8_t bit2: 1;
	uint8_t bit3: 1;
	uint8_t bit4: 1;
	uint8_t bit5: 1;
	uint8_t bit6: 1;
	uint8_t bit7: 1;
} byte;

typedef union
{
	byte bits;
	uint8_t all;
} spi_msg;

spi_msg msg_write;


void spi_read(uint8_t adr, uint8_t numbers);

#endif /* SPI_DRIVE_H_ */
