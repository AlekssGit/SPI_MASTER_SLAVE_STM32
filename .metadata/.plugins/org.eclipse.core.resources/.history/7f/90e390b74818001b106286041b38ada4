#ifndef SPI_DRIVE_H_
#define SPI_DRIVE_H_

#include "stm32f1xx_hal.h"

extern SPI_HandleTypeDef hspi1;

#define SPI_SEND_8_BIT(val) HAL_SPI_Transmit(&hspi1, (uint8_t*)val, 1, 0);

typedef struct {
	uint8_t bit0: 1;
	uint8_t bit1: 1;
	uint8_t bit2: 1;
	uint8_t bit3: 1;
	uint8_t bit4: 1;
	uint8_t bit5: 1;
	uint8_t bit6: 1;
	uint8_t bit7: 1;
} byte;

typedef union
{
	byte bits;
	uint8_t all;
} spi_msg;

spi_msg msg_write;




void spi_read(uint8_t adr_reg, uint8_t numbers);

void spi_write(uint8_t adr_reg, uint16_t val);



#endif /* SPI_DRIVE_H_ */
